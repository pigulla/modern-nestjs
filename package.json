{
  "name": "@modern-nestjs/meta",
  "version": "0.0.1",
  "private": true,
  "description": "Highly opinionated, modern setup for NestJS-projects.",
  "bugs": {
    "url": "https://github.com/pigulla/modern-nestjs/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pigulla/modern-nestjs"
  },
  "license": "ISC",
  "author": {
    "name": "Raphael Pigulla",
    "email": "raphael@pigulla.net",
    "url": "https://de.linkedin.com/in/pigulla"
  },
  "type": "module",
  "workspaces": [
    "packages/domain",
    "packages/dto",
    "packages/app"
  ],
  "scripts": {
    "build": "npm run build --workspace=packages",
    "format": "npm run format:biome && npm run format:package-json",
    "format:biome": "npm run format:biome --workspaces",
    "format:package-json": "sort-package-json && npm run format:package-json --workspaces",
    "lint": "npm run lint:tsc && npm run lint:biome && npm run lint:knip && npm run lint:lockfile && npm run lint:package-json",
    "lint:biome": "npm run lint:biome --workspace=packages",
    "lint:knip": "knip",
    "lint:lockfile": "lockfile-lint",
    "lint:package-json": "npmPkgJsonLint . && sort-package-json --check && npm run lint:package-json --workspaces",
    "lint:tsc": "npm run lint:tsc --workspaces",
    "openapi": "npm run openapi --workspaces --if-present",
    "test": "npm run lint && npm run vitest && npm audit --omit dev --audit-level high",
    "vitest": "npm run vitest:unit && npm run vitest:integration && npm run vitest:architecture",
    "vitest:architecture": "npm run vitest:architecture --workspaces --if-present",
    "vitest:integration": "npm run vitest:integration --workspaces --if-present",
    "vitest:unit": "npm run vitest:unit --workspaces --if-present"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "devDependencies": {
    "@biomejs/biome": "2.1.4",
    "@swc-node/register": "1.10.10",
    "@swc/core": "1.13.3",
    "@tsconfig/node-ts": "23.6.1",
    "@tsconfig/node24": "24.0.1",
    "@types/node": "24.2.1",
    "@vitest/coverage-v8": "3.2.4",
    "cz-conventional-changelog": "3.3.0",
    "jiti": "2.5.1",
    "knip": "5.62.0",
    "lockfile-lint": "4.14.1",
    "npm-package-json-lint": "9.0.0",
    "npm-package-json-lint-config-default": "8.0.1",
    "sort-package-json": "3.4.0",
    "source-map-support": "0.5.21",
    "ts-loader": "9.5.2",
    "tsarch": "5.4.1",
    "type-fest": "4.41.0",
    "typescript": "5.9.2",
    "unplugin-swc": "1.5.5",
    "vite": "7.1.2",
    "vitest": "3.2.4",
    "yaml": "2.8.1"
  }
}
